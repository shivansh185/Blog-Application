<!DOCTYPE html>
<html lang="en">
<head>
    <title>Home</title>
    <%- include('./partials/head') %>
    <style>
       body{
        background-color: rgb(131, 145, 188);
       }
        .title{
            font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
            font-weight: bolder;
            text-decoration:underline;
        }
        .image{
            width: 50vh;
        }
       
    </style>
</head>
<body>
    <%- include('./partials/nav') %>
    <div class="container mt-3">
        <h1 class="title"><%= Blog.title %></h1>
        <img src="<%= Blog.coverImageURL%>" class="image mt-3" />
        <div class="p-3 mb-2 mt-2 bg-body-secondary"><p><%= Blog.body %></p></div>
    </div>
    <div class="container mt-3">
        <img src="<%= Blog.profileImageURL %>" width="50px" />
    </div>

    <div class="container">
        <h3><p>Comments(<%= comments.length %>)</p></h3>
        <% if (locals.user) { %>
            <form action="/blog/comment/<%= Blog._id %>" method="post">
                <div class="mb-3">
                    <input type="text" class="form-control" id="exampleInputComment" aria-describedby="emailHelp" name="content" placeholder="Enter your comment"> 
                  <button type="submit" class="  btn btn-primary  mt-3 " >post</button>
            </form>
            <%  comments.forEach(comment => { %>
               <div class="mt-3"> <h6><%=  comment.content %></h6></div>
               <% }) %>
        <% } %>
    </div>
    <%- include('./partials/script') %>
</body>
</html>